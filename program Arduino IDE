#include "BluetoothSerial.h" //Header File for Serial Bluetooth
BluetoothSerial ESP_BT; //Object for Bluetooth
int incoming;
int LED_PIN = 15; // GPIO ales
const int pingalben= 25;
int x=10;
int y;
int z;
int i;
